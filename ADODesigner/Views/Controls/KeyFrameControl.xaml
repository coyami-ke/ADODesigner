<UserControl x:Class="ADODesigner.Views.Controls.KeyFrameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="50" Width="50" HorizontalAlignment="Stretch" VerticalAlignment="Center" MouseDown="UserControl_MouseDown">
    <Grid>
        <Border x:Name="border" CornerRadius="5" Background="#FFAF7800" Opacity="0.9">
            <TextBlock x:Name="PART_textBlockTag" Margin="10" FontSize="8" TextWrapping="Wrap" Text="textBlockTag" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
        </Border>
    </Grid>
</UserControl>
